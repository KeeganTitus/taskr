<div class='card' style='width'>
	<div class='card-header bg-warning'><%= link_to edit_task_path(task) do %>

		Created:
		<%= time_ago_in_words(task.created_at) %>
		ago

		<% end %>

		<%= link_to '<i class="fa fa-times"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task"}, class: 'pull-right' %>

	</div>

	<div class='card-body'>
		<p class='card-text'>
			<%= task.content %>
		</p>
		<p class='card-text'><small class='text-muted'>
			<div class="btn-group" role="group" aria-label="Basic example">
				<% if task.state == 'doing' %>
					<%=link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "to_do"), method: :put, class: 'btn btn-warning' %>
					<%=link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "done"), method: :put, class: 'btn btn-warning' %>	
				<% elsif task.state == 'to_do' %>
					<%=link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "doing"), method: :put, class: 'btn btn-warning' %>
				<% else %>
					<%=link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "doing"), method: :put, class: 'btn btn-warning' %>
				<% end %>
			</div>
		</small></p>
	</div>
</div>